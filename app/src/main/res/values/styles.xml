<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/textHeadline</item>
    </style>

    <style name="TextAppearance.Body1" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextAppearance.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">#8B959E</item>
    </style>

    <style name="Image.Currency" parent="">
        <item name="android:layout_width">@dimen/img_size</item>
        <item name="android:layout_height">@dimen/img_size</item>
    </style>

    <style name="Text.Toolbar" parent="">
        <item name="android:layout_marginTop">@dimen/marginLayout</item>
        <item name="android:layout_marginStart">@dimen/marginToolbar</item>
        <item name="android:textAppearance">@style/TextAppearance.Headline</item>
    </style>
    
    <style name="Edit.Amount" parent="">
        <item name="android:textAppearance">@style/TextAppearance.Headline</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

</resources>
