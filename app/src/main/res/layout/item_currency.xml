<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/marginLayout">
    
    <ImageView 
        android:id="@+id/ivCurrency"
        style="@style/Image.Currency"
        android:contentDescription="@string/description_currency_img"/>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="start">

        <TextView
            android:id="@+id/tvCurrencyTitle"
            style="@style/TextAppearance.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvCurrencyCountry"
            style="@style/TextAppearance.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <EditText
        android:id="@+id/edAmount"
        style="@style/Edit.Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
</LinearLayout>